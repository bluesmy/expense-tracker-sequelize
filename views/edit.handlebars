<form action="/record/{{record.id}}?_method=PUT" method="POST">
  <div class="form-group row col-8 mx-auto">
    <h6 class="col-2">*必填欄位</h6>
    <h2 class="col-8 text-center">請修改你的支出</h2>
  </div>

  <div class="form-group row col-8 mx-auto">
    <label for="name" class="col-2">名稱*</label>
    <div class="col-8">
      <input type="text" class="form-control" name="name" id="name" value="{{record.name}}" required>
    </div>
  </div>

  <div class="form-group row col-8 mx-auto">
    <label for="date" class="col-2">日期*</label>
    <div class="col-8">
      <input type="date" class="form-control" name="date" id="date" value="{{record.date}}" required>
    </div>
  </div>

  <div class="form-group row col-8 mx-auto">
    <label for="category" class="col-2">類別*</label>
    <div class="col-8">
      <select class="form-control" id="category" name="category">
        <option value="家居物業" {{#if record.household}} selected {{/if}}>家居物業</option>
        <option value="交通出行" {{#if record.transportation}} selected {{/if}}>交通出行</option>
        <option value="休閒娛樂" {{#if record.entertainment}} selected {{/if}}>休閒娛樂</option>
        <option value="餐飲食品" {{#if record.food}} selected {{/if}}>餐飲食品</option>
        <option value="其他" {{#if record.others}} selected {{/if}}>其他</option>
      </select>
    </div>
  </div>

  <div class="form-group row col-8 mx-auto">
    <label for="amount" class="col-2">金額*</label>
    <div class="col-8">
      <input type="number" class="form-control" name="amount" id="amount" value="{{record.amount}}" min="1" required>
    </div>
  </div>

  <div class="form-group row col-8 mx-auto">
    <label for="merchant" class="col-2">商家</label>
    <div class="col-8">
      <input type="text" class="form-control" name="merchant" id="merchant" value="{{record.merchant}}">
    </div>
  </div>

  <div class="form-group row col-8 mx-auto">
    <button type="submit" class="btn btn-primary mx-auto my-3 col-6">送出</button>
  </div>
</form>